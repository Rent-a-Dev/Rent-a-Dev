<head>

  <link rel="stylesheet" href="css/pop-up.css" type="text/css">
</head>

<dialog class="overlay" id="availability-pop-up">
  <section class="pop-up-main">
    <article class="close-container">
      <h3 id="pop-up-avail-heading">Change Availability</h3>
      <a href="#" class="close-pop-up">&#10005;</a>
    </article>
    <form action="/availibility/update" method="post">
      <input type="text" name="developerId" id="developerId" hidden />
      <p>Availabile?</p>
      <article class="input-label-pair left">
        <input type="radio" id="available" name="available" value="true"/>
        <label for="available">Yes</label>
      </article>
      <article class="input-label-pair left">
        <input type="radio" id="not-available" name="available" value="false"/>
        <label for="not-available">No</label>
      </article>
      <button id="cancelButton">Submit</button>
    </form>
  </section>
</dialog>